@import 'nib'

// MAIN

global-reset()

@import '../images/main/sprites'

@import url("http://fonts.googleapis.com/css?family=PT+Sans")

html, body
	overflow hidden

p
	font-family: 'PT Sans', sans-serif
	font-weight 400

*
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	-o-user-select: none
	user-select: none



#content
	background url(../images/bg/sky.jpg) top left no-repeat
	background-size 100% 100%

#copyright
	position absolute
	bottom 10px
	right 10px

	z-index 1000

	p
		font-size 10px
		color white
		line-height 16px
		text-align right

	a
		color #f1b9c4
		text-decoration none

		&:hover
			border-bottom 1px dotted #f1b9c4

#preloader
	position: absolute
	margin-left -30px
	top: 50%
	left: 50%

@import 'desktop/gallery'
@import 'desktop/thumbnails'
@import 'desktop/background'
