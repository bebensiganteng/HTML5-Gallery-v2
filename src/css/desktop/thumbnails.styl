.desktop
	
	#thumbnails
		white-space nowrap
		position relative
		perspective 400

		#thumbnails-group
			transform-style preserve-3d
			> div
				display inline-block
				width 150px
				height 150px
				position absolute

				img
					border-radius (150px/2)
					box-shadow 0 0 5px black

				&:first-child
					margin-left 0
					
	.thumbsnails-title
		margin 0 0 70px -50%
		position absolute
		opacity 0
		width 300px
		
		p
			text-align center
			color white
			font-size 24px
		
			